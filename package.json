        "vue-loader": "^17.4.2",
        "vue-router": "^4.3.2",
        "vue-screen": "^2.4.0"
    },
    "devDependencies": {
        "@pinia/testing": "^0.1.3",
        "@swc/core": "^1.5.7",
        "@tsconfig/recommended": "^1.0.6",
        "@types/chai": "^4.3.16",
        "@types/jest": "^29.5.12",
        "@types/lodash": "^4.17.4",
        "@types/mocha": "^10.0.6",
