        "laravel-echo": "^1.16.1",
        "laravel-vite-plugin": "^1.0.4",
        "lodash": "^4.17.21",
        "pinia": "^2.1.7",
        "postcss": "^8.4.38",
        "postcss-convert-values": "^7.0.0",
        "primeicons": "^7.0.0",
        "primevue": "^3.52.0",
        "pusher-js": "8.4.0-rc2",
        "sass": "^1.77.2",
        "tailwindcss": "^3.4.3",
        "vite": "^5.2.12",
        "vite-plugin-static-copy": "^1.0.5",
        "vue": "^3.4.27",
